<div class="container credentials-form margin-navbar">
  <h2 style="text-align: center">Cadastrar</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
      <%= f.input :first_name,
                  label: "Nome",
                  required: true,
                  input_html: { autocomplete: "first-name" } %>
      <%= f.input :last_name,
                  label: "Sobrenome",
                  required: true,
                  input_html: { autocomplete: "last-name" } %>
      <%= f.input :email,
                  label: "Email",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  label: "Senha",
                  required: true,
                  hint: ("#{@minimum_password_length} caracteres no mÃ­nimo" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: "Confirmar senha",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    <%= f.button :submit, "Cadastrar", class: "btn-dark" %>
    <%= f.button :button, "Cancelar", type: "reset", class: "btn-outline-secondary" %>
  <% end %>
</div>
